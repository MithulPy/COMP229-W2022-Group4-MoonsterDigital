<% include ../partials/header.ejs %>

 <!-- MAIN CONTENT -->
 <div class="container">
    <div class="row">
        <h1><%= title %></h1>
          <form class="form" method="post">
            <div class="form-group">
                <label for="ownerTextField">Owner</label>
                <input type="text" class="form-control" id="ownerTextField"
                placeholder="owner" name="owner"  required>
              </div>
            <div class="form-group">
              <label for="titleTextField">Title</label>
              <input type="text" class="form-control" id="titleTextField"
              placeholder="title" name="title"  required>
            </div>
            <div class="form-group">
              <label for="descriptionTextField">Description</label>
              <textarea type="text" class="form-control" id="descriptionTextField"
              placeholder="Description" name="description" required></textarea>
            </div>
            <div class="form-group">
              <label for="priceTextField">Active</label>
              <input type="text" class="form-control" id="priceTextField"
              placeholder="isActive" name="isActive" required>
            </div>
            <div class="form-group">
              <label for="isCompletedTextField">isCompleted</label>
              <input type="text" class="form-control" id="isCompletedTextField"
              placeholder="isCompleted" name="isCompleted" required>
            </div>
            <div class="form-group">
                <label for="playersTextField">Players</label>
                <input type="text" class="form-control" id="playersTextField"
                placeholder="players" name="players" required>
            </div>
            <div class="form-group">
                <label for="startDateTextField">Start Date</label>
                <input type="date" class="form-control" id="startDateTextField"
                placeholder="startDate" name="startDate" required>
            </div>
            <div class="form-group">
                <label for="endDateTextField">End Date</label>
                <input type="date" class="form-control" id="endDateTextField"
                placeholder="endDate" name="endDate" required>
            </div>
            <div class="form-group">
                <label for="roundsTextField">Rounds</label>
                <input type="text" class="form-control" id="roundsTextField"
                placeholder="rounds" name="rounds" required>
            </div>
              


            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
            <a href="/tournament" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
          </form>
      </div>
    </div>
  </div>


<% include ../partials/footer.ejs %>